<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v4.view.ViewPager
        android:id="@+id/activity_detail_user_public_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />
    <android.support.design.widget.TabLayout
        android:id="@+id/activity_detail_user_public_tablayout"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_gravity="bottom"
        app:layout_anchor="@+id/activity_detail_user_public_appbar"
        app:layout_anchorGravity="bottom"
        app:tabGravity="fill"
        app:tabMode="fixed"
        android:background="@color/tabLayoutBackgroundLight"
        app:tabTextColor="@color/colorPrimary"
        app:tabSelectedTextColor="@color/colorPrimaryDark"
        app:tabIndicatorColor="@color/tabIndicatorColorForDetailBarang" />
    <android.support.design.widget.AppBarLayout
        android:id="@+id/activity_detail_user_public_appbar"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:theme="@style/AppThemeLight.ColoredBackArrow"
        app:elevation="0dp">
        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/activity_detail_user_public_collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                android:scaleType="fitXY"
                app:layout_collapseMode="none">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/vector_marketplace_nyolong_gambar"
                    android:scaleType="centerCrop"/>
                <LinearLayout
                    android:layout_marginTop="?attr/actionBarSize"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    app:layout_collapseMode="none">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src ="@drawable/ic_noavatar"/>
                    <TextView
                        android:id="@+id/activity_detail_user_public_name"
                        android:layout_marginLeft="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="User"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:textSize="16dp"/>
                </LinearLayout>
            </RelativeLayout>

            <android.support.v7.widget.Toolbar
                android:id="@+id/activity_detail_user_public_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_scrollFlags="scroll"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/AppThemeLight.PopupOverlay">
                <TextView
                    android:id="@+id/activity_detail_user_public_toolbar_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Detail User"
                    android:textAppearance="?android:textAppearance"
                    android:textSize="16dp"/>
            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

</android.support.design.widget.CoordinatorLayout>