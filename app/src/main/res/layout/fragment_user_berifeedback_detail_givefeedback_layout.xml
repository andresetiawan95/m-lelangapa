<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@color/backgroundLayoutWhiteColor"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true">
    <RatingBar
        android:id="@+id/fragment_user_berifeedback_givefeedback_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:stepSize="1.0"/>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fragment_user_berifeedback_givefeedback_ulasan_text_layout">
        <EditText
            android:id="@+id/fragment_user_berifeedback_givefeedback_ulasan"
            android:layout_width="match_parent"
            android:textAppearance="?android:textAppearance"
            android:layout_height="wrap_content"
            android:hint="Ulasan"/>
    </android.support.design.widget.TextInputLayout>
    <Button
        android:id="@+id/fragment_user_berifeedback_givefeedback_simpan"
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SIMPAN"
        android:backgroundTint="@color/buttonBackgroundColorUser"
        android:textColor="@color/buttonWhiteColor"/>
</LinearLayout>