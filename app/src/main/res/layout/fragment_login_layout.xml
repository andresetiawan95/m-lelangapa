<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:paddingTop="24dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    tools:context="com.lelangkita.android.fragments.LoginFragment">

    <!-- TODO: Update blank fragment layout -->
    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_login_layout_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp">
    <EditText
        android:id="@+id/fragment_login_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Username"
        android:inputType="text"
        android:textAppearance="?android:textAppearanceMedium" />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_login_layout_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp">
    <EditText
        android:id="@+id/fragment_login_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragment_login_username"
        android:hint="Password"
        android:inputType="textPassword"
        android:textAppearance="?android:textAppearanceMedium" />
    </android.support.design.widget.TextInputLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/fragment_login_button"
        android:background="@color/buttonBackgroundColorUser"
        android:textColor="@color/buttonWhiteColor"
        android:text="Login"
        android:layout_marginBottom="12dp"
        android:textAppearance="?android:textAppearanceMedium"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/fragment_login_register_keterangan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Belum memiliki Akun Lelangkita? "/>
        <TextView
            android:id="@+id/fragment_login_register_textview"
            android:layout_toRightOf="@id/fragment_login_register_keterangan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:text="Daftar"/>
    </RelativeLayout>

</LinearLayout>
