<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="5dp"
    android:paddingRight="5dp">
    <android.support.v7.widget.CardView

        android:id="@+id/fragment_user_gerai_layout_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardUseCompatPadding="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?android:attr/selectableItemBackground"
            android:focusable="true"
            android:clickable="true">
            <ImageView
                android:id="@+id/fragment_user_gerai_layout_imgview"
                android:layout_margin="8dp"
                android:layout_width="90dp"
                android:src="@drawable/ic_insert_photo_grey_128dp"
                android:layout_height="90dp" />
            <TextView
                android:id="@+id/fragment_user_gerai_layout_namabarang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Judul 1"
                android:textAppearance="?android:textAppearanceMedium"
                android:layout_toRightOf="@id/fragment_user_gerai_layout_imgview"/>
            <TextView
                android:id="@+id/fragment_user_gerai_layout_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="user 1"
                android:layout_toRightOf="@id/fragment_user_gerai_layout_imgview"
                android:layout_below="@id/fragment_user_gerai_layout_namabarang"/>
            <TextView
                android:id="@+id/fragment_user_gerai_layout_harga"
                android:text="harga 1"
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fragment_user_gerai_layout_user"
                android:layout_toRightOf="@id/fragment_user_gerai_layout_imgview"/>
            <TextView
                android:id="@+id/fragment_user_gerai_layout_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="status 1"
                android:layout_marginRight="8dp"
                android:layout_alignParentRight="true"
                android:layout_below="@id/fragment_user_gerai_layout_harga"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>