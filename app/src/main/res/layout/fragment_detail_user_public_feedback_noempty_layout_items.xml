<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    card_view:cardUseCompatPadding="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">
            <ImageView
                android:id="@+id/fragment_detail_user_public_feedback_noempty_layout_avatar"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@drawable/ic_noavatar"
                android:layout_gravity="center"/>
            <LinearLayout
                android:layout_marginLeft="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/fragment_detail_user_public_feedback_noempty_layout_nama_user"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NamaUser"
                        android:textAppearance="?android:textAppearance"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Untuk"/>
                    <TextView
                        android:id="@+id/fragment_detail_user_public_feedback_noempty_layout_nama_barang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="NamaBarang"
                        android:textAppearance="?android:textAppearance"/>
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lelang ke #"
                            android:textSize="12dp"/>
                        <TextView
                            android:id="@+id/fragment_detail_user_public_feedback_noempty_layout_status_bidkali"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12dp"
                            android:text="1"/>
                    </LinearLayout>
                    <RatingBar
                        android:id="@+id/fragment_detail_user_public_feedback_noempty_layout_rate_given"
                        android:layout_alignParentRight="true"
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:rating="3"
                        android:isIndicator="true"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <TextView
                android:id="@+id/fragment_detail_user_public_feedback_noempty_layout_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Message"/>
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>
