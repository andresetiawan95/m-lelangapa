<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tawaran tertinggi"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:textAppearance="?android:textAppearance"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/fragment_detail_barang_bid_imagebidder"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/ic_noavatar"/>
        <TextView
            android:id="@+id/fragment_detail_barang_bid_namabidder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama bidder"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/fragment_detail_barang_bid_imagebidder"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp.1.000.000"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:focusableInTouchMode="true">
            <EditText
                android:inputType="number"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorAccent"/>
        </LinearLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:backgroundTint="@color/buttonBackgroundColorUser"
            android:textColor="@color/buttonWhiteColor"
            android:text="TAWAR"/>

    </LinearLayout>
</LinearLayout>