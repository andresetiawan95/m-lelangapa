<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:id="@+id/fragment_usereditprofile_layout_card">
        <ProgressBar
            android:id="@+id/fragment_userprofile_editprofile_progress_bar_informasiakun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />
        <RelativeLayout
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textview_informasi_akun"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text = "Informasi Akun"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginBottom="8dp"
                android:textAppearance="?android:textAppearanceMedium" />
            <android.support.design.widget.TextInputLayout
                android:id="@+id/fragment_usereditprofile_name_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textview_informasi_akun"
                android:layout_marginBottom="12dp">
                <EditText
                    android:id="@+id/fragment_usereditprofile_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nama"
                    android:inputType="none"
                    android:textAppearance="?android:textAppearanceMedium" />
            </android.support.design.widget.TextInputLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginBottom="8dp">
        <ProgressBar
            android:id="@+id/fragment_userprofile_editprofile_progress_bar_informasikontak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:padding="12dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:textAppearanceMedium"
                android:text="Informasi Kontak"
                android:layout_marginBottom="8dp"
                android:textColor="@color/colorPrimaryDark"/>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/fragment_usereditprofile_phone_layout"
                android:layout_width="match_parent"
                android:layout_below="@+id/fragment_usereditprofile_name_layout"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp">
                <EditText
                    android:id="@+id/fragment_usereditprofile_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nomor Telepon"
                    android:inputType="text"
                    android:textAppearance="?android:textAppearanceMedium" />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/fragment_usereditprofile_email_layout"
                android:layout_width="match_parent"
                android:layout_below="@+id/fragment_usereditprofile_phone_layout"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp">
                <EditText
                    android:id="@+id/fragment_usereditprofile_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email"
                    android:inputType="text"
                    android:textAppearance="?android:textAppearanceMedium" />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <Button
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/buttonBackgroundColorUser"
        android:text="Simpan"
        android:textColor="@color/buttonWhiteColor"
        android:textAppearance="?android:textAppearanceMedium"/>
</LinearLayout>