<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/fragment_detail_barang_peringkat_top_three_snippet_avatar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="8dp"
        android:src="@drawable/ic_noavatar"/>
    <!-- maximum 25 characters-->
    <TextView
        android:id="@+id/fragment_detail_barang_peringkat_top_three_snippet_name"
        android:text="Lorem Ipsum"
        android:textAppearance="?android:textAppearance"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/fragment_detail_barang_peringkat_top_three_snippet_bidprice"
        android:text="Rp. 1.000.000.000.000"
        android:layout_gravity="center"
        android:layout_weight="1.5"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
</LinearLayout>
