<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tawaran tertinggi"
        android:textAppearance="?android:textAppearance"/>
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/fragment_detail_barang_bidding_highestbid_auctioneer_bidderavatar"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/ic_noavatar"/>
        <TextView
            android:id="@+id/fragment_detail_barang_bidding_highestbid_auctioneer_namabidder"
            android:layout_toRightOf="@id/fragment_detail_barang_bidding_highestbid_auctioneer_bidderavatar"
            android:text="Nama bidder"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/fragment_detail_barang_bidding_highestbid_auctioneer_hargabid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="Rp. 1.000.000"/>
    </RelativeLayout>
    <Button
        android:id="@+id/fragment_detail_barang_bidding_highestbid_auctioneer_ambiltawaran"
        android:textSize="10dp"
        android:text="Ambil Tawaran Ini"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/fragment_detail_barang_bidding_highestbid_auctioneer_daftartawaran"
            android:textSize="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Daftar Tawaran Masuk"/>
        <Button
            android:id="@+id/fragment_detail_barang_bidding_highestbid_auctioneer_hentikanlelang"
            android:textSize="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Hentikan lelang"/>
    </LinearLayout>
</LinearLayout>