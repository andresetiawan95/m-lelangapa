<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/linear_horizontal_divider"/>
    <LinearLayout
        android:background="@color/backgroundLayoutWhiteColor"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/fragment_detail_barang_auctioneer_layout_profilepicture"
                android:src="@drawable/ic_noavatar"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"/>
            <LinearLayout
                android:paddingLeft="8dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/fragment_detail_barang_auctioneer_layout_nama"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nama Auctioneer"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textAppearance="?android:textAppearance"
                    android:layout_marginBottom="5dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rating Auctioneer"
                            android:layout_marginBottom="3dp"/>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="3dp">
                            <ImageView
                                android:src="@drawable/ic_star_yellow_detailfragment_64dp"
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:layout_gravity="center"/>
                            <TextView
                                android:id="@+id/fragment_detail_barang_auctioneer_layout_rating_auctioneer_rate"
                                android:layout_marginRight="8dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="--"
                                android:textSize="14dp"/>
                            <ImageView
                                android:src="@drawable/ic_person_detailfragment_rater_64dp"
                                android:layout_gravity="center"
                                android:layout_width="14dp"
                                android:layout_height="14dp"/>
                            <TextView
                                android:id="@+id/fragment_detail_barang_auctioneer_layout_rating_auctioneer_total"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="--"
                                android:textSize="14dp"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:text="Rating Winner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="3dp"/>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="3dp">
                            <ImageView
                                android:src="@drawable/ic_star_yellow_detailfragment_64dp"
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:layout_gravity="center"/>
                            <TextView
                                android:id="@+id/fragment_detail_barang_auctioneer_layout_rating_winner_rate"
                                android:layout_marginRight="8dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="--"
                                android:textSize="14dp"/>
                            <ImageView
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_person_detailfragment_rater_64dp"/>
                            <TextView
                                android:id="@+id/fragment_detail_barang_auctioneer_layout_rating_winner_total"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="--"
                                android:textSize="14dp"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <!--<View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/linear_horizontal_divider"/>-->
</LinearLayout>