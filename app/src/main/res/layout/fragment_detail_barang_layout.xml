<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/backgroundLayoutWhiteColor">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Judul Barang"
                android:textAppearance="?android:textAppearance"
                android:textSize="16dp"
                android:layout_marginBottom="5dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/fragment_detail_barang_auctioneer_profilepicture"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_noavatar"/>
                <TextView
                    android:id="@+id/fragment_detail_barang_auctioneer_name"
                    android:layout_toRightOf="@+id/fragment_detail_barang_auctioneer_profilepicture"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama Auctioneer"/>
                <FrameLayout
                    android:id="@+id/fragment_detail_barang_status_fragment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="6dp"
                        android:text="LIVE"/>
                </FrameLayout>
            </RelativeLayout>
        </LinearLayout>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="8dp">
                <ImageView
                    android:scaleType="center"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:src="@drawable/ic_insert_photo_grey_128dp"/>
                <FrameLayout
                    android:id="@+id/fragment_detail_barang_waktubid_fragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </FrameLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <FrameLayout
            android:id="@+id/fragment_detail_barang_bidding_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp">
        </FrameLayout>
        <FrameLayout
            android:id="@+id/fragment_detail_barang_deskripsi_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp">
        </FrameLayout>
        <FrameLayout
            android:id="@+id/fragment_detail_barang_komentar_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp">
        </FrameLayout>
        <FrameLayout
            android:id="@+id/fragment_detail_barang_auctioneer_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </FrameLayout>
    </LinearLayout>
</ScrollView>
