<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="50dp"
        android:layout_height="wrap_content">
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:gravity="right"
        android:layout_marginTop="@dimen/fragment_chat_message_margin"
        android:layout_marginLeft="@dimen/fragment_chat_message_margin"
        android:layout_marginRight="@dimen/fragment_chat_message_margin">
        <LinearLayout
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="right"
            android:background="@color/backgroundLayoutWhiteColor">
            <TextView
                android:id="@+id/fragment_chat_room_message_send_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama User"
                android:textAppearance="?android:textAppearance"/>
            <TextView
                android:layout_marginTop="12dp"
                android:id="@+id/fragment_chat_room_message_send_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Isi pesan"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>